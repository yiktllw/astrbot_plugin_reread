{
    "reread_group_whitelist": {
        "description": "复读群聊白名单",
        "type": "list",
        "hint": "仅在这些群里启用复读功能，留空表示全部群聊启用",
        "default": []
    },
    "require_different_people": {
        "description": "是否要求消息要来自不同人才复读",
        "type": "bool",
        "hint": "可防止单个人恶意引导复读，如广告哥",
        "default": true
    },
    "thresholds": {
        "description": "复读阈值设置",
        "type": "object",
        "hint": "阈值太低容易导致刷屏，太高则难以触发复读",
        "items": {
            "Plain": {
                "description": "文本复读阈值",
                "type": "int",
                "hint": "重复发同一句话多少次后复读",
                "default": 3
            },
            "Image": {
                "description": "图片复读阈值",
                "type": "int",
                "hint": "重复发同一张图片多少次后复读",
                "default": 3
            },
            "Face": {
                "description": "表情复读阈值",
                "type": "int",
                "hint": "重复发同一个QQ表情多少次后复读",
                "default": 2
            },
            "At": {
                "description": "@复读阈值",
                "type": "int",
                "hint": "重复@同一个人多少次后复读",
                "default": 3
            }
        }
    },
    "repeat_probability": {
        "description": "复读概率",
        "type": "float",
        "hint": "到达复读阈值后，进行复读的概率，设小一些可有效防止频繁复读",
        "default": 0.8
    },
    "enable_single_repeat": {
        "description": "启用单条复读",
        "type": "bool",
        "hint": "启用后，收到消息时会按概率直接复读，无需达到阈值",
        "default": false
    },
    "single_repeat_probability": {
        "description": "单条复读概率",
        "type": "float",
        "hint": "收到消息后直接复读的概率，建议设置较小的值（如0.05）以避免过于频繁",
        "default": 0.05
    },
    "interrupt_probability": {
        "description": "打断复读概率",
        "type": "float",
        "hint": "满足复读概率后，将复读内容替换成“打断！”的概率，别设太高，小心被打哟~",
        "default": 0.1
    },
    "cooldown_seconds": {
        "description": "复读冷却时间",
        "type": "int",
        "hint": "前后两次复读需要等待的时间间隔（单位为秒），设大一些可有效防止频繁复读",
        "default": 30
    },
    "banned_words": {
        "description": "违禁词",
        "type": "list",
        "hint": "消息文本中含有违禁词时，终止复读，可防止复读一些危险言论",
        "default": [
            "免费",
            "广告",
            "操",
            "赌",
            "政",
            "党"
        ]
    }
}